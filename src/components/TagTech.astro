---
interface Props {
  name: string
  bg: string
  Icon?: any
}

const { name, bg, Icon } = Astro.props
---

<li
  style={`background: ${bg}`}
  class="tag">
  <span class="tech">{name}</span>
</li>

<style>
  .tag {
    padding: 0.5rem 1rem;
    background: white;
    color: black;
    width: min-content;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 5px;
    color: white;
    animation-name: introTag;
    /* animation-timeline: view(y 15% 20%); */
    animation-range: entry 15% contain 25%;
    font-size: 0.9rem;
  }

  @keyframes introTag {
    from {
      translate: 0 5px;
      opacity: 0.5;
    }
  }

  .icon-tech {
    width: 1rem;
    height: 1rem;
    background: white;
  }
  .tech {
  }
</style>
