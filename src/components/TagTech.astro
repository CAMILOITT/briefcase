---
interface Props {
  name: string
  bg: string
}

const { name, bg } = Astro.props
---

<li
  style={`background: ${bg}`}
  class="tag">
  <slot />
  <span class="tech">{name}</span>
</li>

<style>
  .tag {
    padding: 0.2rem 0.6rem;
    color: black;
    width: min-content;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 5px;
    color: var(--text);
    font-size: 0.9rem;
  }

  @keyframes introTag {
    from {
      translate: 0 5px;
      opacity: 0.5;
    }
  }

  svg {
    width: 1rem;
    height: 1rem;
    background: var(--text);
  }
</style>
