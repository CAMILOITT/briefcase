---
import { ListSkill } from '../const/skills'
---

<div class="skills">
  <h2>Conociminentos</h2>
  <ul class="list-skills">
    {
      ListSkill.map(({ name, Icon, bg }) => (
        <li
          class="skill"
          data-name={name}
          style={`--bg: ${bg}`}>
          <Icon />
        </li>
      ))
    }
  </ul>
</div>

<style>
  .skills {
    display: grid;
    grid-template-rows: auto 250px;
    color: white;
  }
  h2 {
    margin-bottom: 1rem;
    grid-column: span 2;
    text-align: center;
  }
  .list-skills {
    --columns: 5;
    --rows: 3;
    --gap: 5px;
    --size: 50px;
    overflow: hidden;
    display: grid;
    list-style: none;
    grid-template-columns: repeat(var(--columns), var(--size));
    gap: var(--gap);
    width: calc(var(--size) * var(--columns) + var(--gap) * var(--columns));
    height: calc(var(--size) * var(--rows) + var(--gap) * var(--rows));
    padding: 0 35px;
    box-sizing: content-box;
  }
  .skill {
    width: var(--size);
    height: var(--size);
    background: lightsalmon;
    animation: moveList 15s infinite alternate;
    display: grid;
    place-content: center;
    padding: 5px;
    border-radius: 5px;
    position: relative;
    transition: 0.4s;
  }
  .list-skills:hover .skill {
    animation-play-state: paused;
  }
  .skill > svg {
    stroke: white;
    stroke-width: 2px;
  }
  .skill:hover {
    z-index: 1;
    background: var(--bg);
  }
  .skill:hover::before {
    opacity: 1;
  }
  .skill::before {
    content: attr(data-name);
    position: absolute;
    top: 50%;
    left: 50%;
    translate: -50% -50%;
    opacity: 0;
    background: #000;
    padding: 0.5rem;
    border-radius: 3px;
    transition: 0.2s;
  }

  @keyframes moveList {
    25%,
    70% {
      translate: 0 0;
    }
    to,
    75% {
      translate: 0 -100%;
    }
  }
</style>
